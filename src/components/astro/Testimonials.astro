---

<div class="mx-auto max-w-5xl px-4 py-16 lg:px-0 lg:py-32">
	<h1 class="mb-8 text-4xl lg:text-6xl">Testimonials</h1>
	<div class="flex flex-col gap-4 lg:flex-row">
		{
			[col1, col2, col3].map((col) => (
				<div class="flex flex-col gap-4">
					{col.map((testimonial, index) => (
						<div class="bg-neutral-900 p-4 lg:rounded lg:p-8">
							<p class="mb-1 text-lg font-bold text-red-700">
								{testimonial.name}
							</p>
							<p class="mb-4 text-sm text-neutral-300">
								{new Date(testimonial.date).toDateString()}
							</p>
							<p>{testimonial.message}</p>
						</div>
					))}
				</div>
			))
		}
	</div>
</div>
